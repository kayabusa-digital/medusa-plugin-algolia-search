{
	"compilerOptions": {
		"target": "es2016",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"sourceMap": true,
		"declaration": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
	},
	"include": ["src"],
	"exclude": [
		"dist",
		"src/**/__tests__",
		"src/**/__mocks__",
		"src/**/__fixtures__",
		"node_modules"
	]
}
